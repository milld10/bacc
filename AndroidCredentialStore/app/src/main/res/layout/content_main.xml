<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.camilla.androidcredentialstore.activities.MainActivity"
    tools:showIn="@layout/activity_main">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <!-- Bluetooth Layout -->
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:onClick="showBluetoothActivity">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:tint="@color/green_shade1"
                app:srcCompat="@android:drawable/stat_sys_data_bluetooth"
                android:id="@+id/BluetoothSymbol"
                android:cropToPadding="false"
                android:padding="10dp"
                android:layout_gravity="center" />

            <TextView
                android:text="@string/bluetooth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:id="@+id/BluetoothTextView"
                android:textSize="24sp"
                android:textAlignment="inherit"
                android:padding="20dp"
                android:layout_gravity="center_vertical"
                 />
        </LinearLayout>

        <!-- Logins Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:onClick="showLoginsActivity" >

            <ImageView
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:tint="@color/green_shade1"
                android:id="@+id/LoginsSymbol"
                android:cropToPadding="false"
                android:padding="10dp"
                android:src="@android:drawable/ic_lock_idle_lock"
                android:layout_gravity="center" />

            <TextView
                android:text="@string/accounts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:id="@+id/LoginsTextView"
                android:textSize="24sp"
                android:textAlignment="inherit"
                android:padding="20dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

