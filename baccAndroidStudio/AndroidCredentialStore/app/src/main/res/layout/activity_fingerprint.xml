<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewAuthen"
        android:layout_marginTop="45dp"
        android:textSize="24sp"
        android:textAlignment="center"
        android:text="@string/masterPassword"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <!-- Master Password -->

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/masterPasswordLayout"
        app:passwordToggleEnabled="true"
        android:layout_below="@+id/textViewAuthen"
        android:layout_alignStart="@id/textViewAuthen"
        android:layout_marginTop="30dp">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:maxLines="1"
            android:id="@+id/masterPassword" />
    </android.support.design.widget.TextInputLayout>

    <!--
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/masterPassword"
        android:layout_marginTop="25dp"
        android:maxLines="1"
        android:drawableTint="@color/blue2"
        android:layout_below="@+id/textViewAuthen"
        android:layout_alignParentStart="true" /> -->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_access"
        android:text="@string/button_access"
        android:layout_below="@+id/masterPasswordLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:clickable="true" />


    <!-- Fingerprint -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewFingerprint"
        android:textSize="24sp"
        android:textAlignment="center"
        android:text="@string/fingerprint"
        android:layout_below="@+id/button_access"
        android:layout_alignStart="@+id/masterPasswordLayout"
        android:layout_marginTop="70dp" />


    <ImageView
        android:layout_width="60dp"
        android:src="@drawable/ic_fingerprint_black_48px"
        android:tint="@color/blue2"
        android:layout_below="@id/textViewFingerprint"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_height="60dp"
        android:id="@+id/img_fingerprint"/>

    <TextView
        android:id="@+id/mytextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/img_fingerprint"
        android:layout_marginTop="40dp"/>




</RelativeLayout>